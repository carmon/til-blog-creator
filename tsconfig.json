{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "declaration": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "ESNext"
  },
  "include": ["api", "src", "defs.d.ts"],
  "exclude": ["node_modules"],
  "ts-node": {
		"transpileOnly": true,
		"files": true,
		"experimentalResolver": true
	}
}
